{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "charset": "utf-8",
    "lib": [
      "es6"
    ],
    "pretty": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "outDir": "../../../node_modules/express-validator/build"
  },
  "include": [
    "../../../node_modules/express-validator/**/*.d.ts",
    "../../../node_modules/express-validator/**/*.spec.ts"
  ],
  "exclude": [ "../../../node_modules/express-validator/node_modules", "../../../node_modules/express-validator/coverage" ]
}
